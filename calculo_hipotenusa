#include<stdio.h>
#include<math.h>

int main(){
	
	float hipotenusa = 0;
	float cateto1 = 0;
	float cateto2 = 0;
	
	printf("Digite cateto1: ");
	scanf("%f", &cateto1);
	printf("Digite cateto2: ");
	scanf("%f", &cateto2);

	hipotenusa = sqrt(pow(cateto1,2)+pow(cateto2,2));
	
	printf("La hipotenusa del triangulo es: %.2f",hipotenusa);
	
	return 0;
}
